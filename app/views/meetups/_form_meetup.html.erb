                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="input-group bootstrap-timepicker timepicker form-group">
            <input name="start_time" id="timepicker1" type="text" value="<%= params[:start_time] %>" class="form-control input-small">
            <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
          </div>
        </div>
        <div class="col-sm-6">
         <div class="input-group bootstrap-timepicker timepicker form-group">
          <input name="end_time" id="timepicker2" type="text" value="<%= params[:end_time] %>" class="form-control input-small">
          <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
         </div>
      </div>
    </div>
