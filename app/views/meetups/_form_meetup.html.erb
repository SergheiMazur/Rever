
   <%= form_tag meetups_path, method: :post do %>
    <div class="row">
      <div class='col-xs-12'>
        <div class="form-group">
          <div class='input-group' >
            <input name="title" type='text' class="form-control" value="<%= params[:location] %>"placeholder="Title"/>
          </div>
        </div>
      </div>
      <div class='col-xs-12'>
        <div class="form-group">
          <div class='input-group'>
            <input name="location" type='text' class="form-control" value="<%= params[:location] %>" placeholder="Location" />
          </div>
        </div>
      </div>
    </div>
    <div class="row">
        <div class='col-xs-12'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                  <label for="date"></label>
                    <input name="date" type='text' class="form-control" value="<%= params[:date] %>" placeholder="Date"/>
