<h1><%= @user.email %></h1>



  <ul class="nav nav-tabs">
    <li class="active"><%= link_to("Hostings", user_profile_path(type: "host"))  %></li>
    <li><%= link_to("Attending", user_profile_path(type: "guest"))  %></li>
  </ul>

<table class="table table-striped">
    <thead>
      <tr>
        <th scope="col" >Title</th>
        <th scope="col" >Host</th>
        <th scope="col" >Location</th>
        <th scope="col" >Start time</th>
        <th scope="col" >End time</th>
        <th scope="col" >Game</th>
        <th scope="col" ><%= @host ? "Attending" : "Status" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <tbody>
    <% @meetups.each do |meetup| %>
      <tr>
        <td><%= link_to meetup.title, meetup_path(meetup) %></td>
        <td><%= link_to meetup.user.email, user_profile_path(meetup.user) %></td>
        <td><%= meetup.location %></td>
        <td><%= meetup.start_time %></td>
        <td><%= meetup.end_time %></td>
        <td><%= meetup.game.name %></td>
        <% if @host %>
          <td> <%= meetup.guests.size %> <%= "Guest".pluralize(meetup.guests.size) %></td>
        <% else %>
          <td><%= meetup.guests.find_by(user:@user).current_status %></td>
        <% end %>
      </tr>
     <% end %>
  </tbody>
</table>



