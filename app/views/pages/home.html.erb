<div class="container-layout">
  <div class="flex-center flex-grow-1" id="right">
    <div class="content">
      <h1>HOST</h1>
    </div>
  </div>
  <div class="flex-center flex-grow-1" id="left">
    <div class="content">
      <h1>PLAY</h1>
      <div>
      <%= form_tag meetups_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a meetup"
      %>
      <% end %>
      </div>
    </div>
  </div>
</div>





