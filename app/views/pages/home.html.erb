<!-- Banner Start-->
<div class="home">
  <div class="title-container">
    <div class="background-container">

      <h1 class="header-font">Welcome to</h1>
      <h1>
        <em>R</em>
        <em class="planet left">E</em>
        <em>V</em>
        <em class="planet right">E</em>
        <em>R</em>
      </h1>
    </div>
    <p></p>
    <!-- Paragraph -->
    <div class="body-container">
        <p class="line-1 anim-typewriter">What game do you want to play today?</p>
    </div>
      <div class="search-container">
          <%= form_tag meetups_path, {method: :get, :class => 'comment_form'} do %>
          <%= text_field_tag :query,
            params[:query]%>
            <a href=""></a>
          <%= button_tag "",:class => 'fa fa-2x fa-search', placeholder: "Search for a game" %>
          <% end %>
      </div>
  </div>
</div>

<div class="container" >
  <div class="container-bottom">
    <p class="container-cards">Browse Hangouts in Your Area</p>
    <% @meetups.each do |meetup| %>
      <div class="col-xs-3">
        <%= render "shared/cards", meetup: meetup %>
      </div>
    <% end %>
    <div
      id="map"
      style="width: 100%;
      height: 600px;
      margin-top: 18px;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>
</div>







