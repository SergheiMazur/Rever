<!-- Banner Start-->
<div class="home">

  <div class="home-left">
    <div class="title-container">
    <h1>Welcome to Rever!</h1>
    <!-- Paragraph -->
    <p>Your gaming neighboorhood_</p>
    </div>
  </div>

  <div class="home-right">
    <div class="form-container">
      <div class="form-group">
        <div class="search-bar">
          <%= form_tag meetups_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "What game do you feel like playing today?"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="container-cards">
  <h2>Open Hangouts in Your Area_</h2>
    <% @meetups.each do |meetup| %>
      <div class="col-xs-3">
        <%= render "shared/cards", meetup: meetup %>
      </div>
    <% end %>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;
    margin-top: 18px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
</div>


