<!-- Banner Start-->
<div class="home">
  <div class="home-left">
    <div class="title-container">
    <h1>Welcome to Rever!</h1>
    <!-- Paragraph -->
    <p>Your gaming neighboorhood_</p>
  </div>
</div>



  <div class="home-right">
    <div class="form-container">
<form>
    <div class="form-group">
        <label for="checkin">Day?</label>
        <input class="flatpickr" id="checkin" type="text" placeholder="Hangout Date">
    </div>

    <div class="form-group">
        <label for="checkout">Time</label>
        <input class="flatpickr" id="checkout" type="text" placeholder="Hangout Time">
    </div>

    <div class="form-group">
        <label for="room">Number of Guests?</label>
        <select class="form-control" id="room">
            <option>Choose Number of Guests</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>6</option>
        </select>
    </div>

    <div class="search-bar">
                 <%= form_tag meetups_path, method: :get do %>
                  <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Pick a game to play"
                  %>
                <% end %>
    </div>

    <div class="form-group">
        <label>&nbsp;</label>
        <%= link_to "Continue to Hangout Details",new_meetup_path %>
    </div>
</form>
  </div>
</div>
</div>













